<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Place">
        <item name="android:background">@color/empty</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="StartPage">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="StartPage.TextView">
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="StartPage.SeekBar">
        <item name="android:progressBackgroundTint">@color/color_primary_dark</item>
        <item name="android:progressTint">@color/color_accent</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>
    <style name="StartPage.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
